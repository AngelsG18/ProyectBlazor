@code {
    public List<Seg_UserCLS> ListSeg_User { get; set; }
    private Accion sAccion = Accion.TodosUsuarios;
    public enum Accion
    {
        TodosUsuarios = 1, SinEquiposAsignados, PorUsuario, PorNombreUsuario, PorEstacion, 
        PorCentroCosto, PorTrabajador, PorDepartamentoArea, PorUsuarioWindows
    }
    public enum Opciones
    {
        Opcion1,
        Opcion2,
        Opcion3
    }

    private string TxtBusqUser { get; set; } = string.Empty;
    private string TxtBusqNomUser { get; set; } = string.Empty;
    private string TxtBusqEsta { get; set; } = string.Empty;
    private string TxtBusqCenCost { get; set; } = string.Empty;
    private string TxtBusqTra { get; set; } = string.Empty;
    private string TxtBusqDepArea { get; set; } = string.Empty;
    private string TxtBusqUserWin { get; set; } = string.Empty;

    private bool IsPorUsuario => sAccion == Accion.PorUsuario;
    private bool IsPorNombreUsuario => sAccion == Accion.PorNombreUsuario;
    private bool IsPorEstacion => sAccion == Accion.PorEstacion;
    private bool IsPorCentroCosto => sAccion == Accion.PorCentroCosto;
    private bool IsPorTrabajador => sAccion == Accion.PorTrabajador;
    private bool IsPorDepartamentoArea => sAccion == Accion.PorDepartamentoArea;
    private bool IsPorUsuarioWindows => sAccion == Accion.PorUsuarioWindows;

    private void OnAccionChanged(Accion nuevaAccion)
    {
        if (sAccion != nuevaAccion)
        {
            sAccion = nuevaAccion;
            LimpiarCampos();
        }
    }

    private void LimpiarCampos()
    {
        if (!IsPorUsuario) TxtBusqUser = string.Empty;
        if (!IsPorNombreUsuario) TxtBusqNomUser = string.Empty;
        if (!IsPorEstacion) TxtBusqEsta = string.Empty;
        if (!IsPorCentroCosto) TxtBusqCenCost = string.Empty;
        if (!IsPorTrabajador) TxtBusqTra = string.Empty;
        if (!IsPorDepartamentoArea) TxtBusqDepArea = string.Empty;
        if (!IsPorUsuarioWindows) TxtBusqUserWin = string.Empty;
    }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();   
    }

    private async Task CargaList()
    {
        await Task.CompletedTask;
    }

    


}
